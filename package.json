{
	"name": "@zayne-labs/toolkit-root",
	"type": "module",
	"version": "0.0.0",
	"packageManager": "pnpm@9.15.4",
	"author": "Ryan Zayne",
	"scripts": {
		"build": "turbo run --filter=./packages/* build",
		"build:test": "turbo run --filter=./packages/* build:test",
		"bump": "bumpp",
		"dev:core": "turbo run --filter=./packages/toolkit-core dev",
		"dev:react": "turbo run --filter=./packages/toolkit-react dev",
		"dev:type-helpers": "turbo run --filter=./packages/toolkit-type-helpers dev",
		"inspect:eslint-config": "pnpx @eslint/config-inspector@latest",
		"lint:attw": "turbo run --filter=./packages/* lint:attw",
		"lint:eslint": "turbo run --filter=./packages/* lint:eslint",
		"lint:eslint:interactive": "turbo run --filter=./packages/* lint:eslint:interactive",
		"lint:eslint:root": "eslint . --max-warnings 0",
		"lint:eslint:root:interactive": "pnpx eslint-interactive@latest . --max-warnings 0 --fix",
		"lint:format": "turbo run --filter=./packages/* lint:format",
		"lint:format:root": "prettier --write .",
		"lint:publint": "turbo run --filter=./packages/* lint:publint",
		"lint:size": "turbo run --filter=./packages/* lint:size",
		"lint:type-check": "turbo run --filter=./packages/* lint:type-check",
		"prepare": "husky",
		"release": "pnpm --filter=./packages/* release",
		"release:test": "pnpx pkg-pr-new publish './packages/*' --compact",
		"test": "turbo run --filter=./packages/* test",
		"test:browser": "turbo run --filter=./packages/* test:browser",
		"test:coverage": "turbo run --filter=./packages/* test:coverage",
		"test:dev": "turbo run --filter=./packages/* test:dev"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint-react/eslint-plugin": "^2.2.2",
		"@types/node": "^24.7.2",
		"@zayne-labs/eslint-config": "^0.10.9",
		"@zayne-labs/prettier-config": "^0.10.9",
		"@zayne-labs/tsconfig": "0.10.9",
		"bumpp": "^10.3.1",
		"eslint": "^9.37.0",
		"eslint-plugin-react-hooks": "^7.0.0",
		"eslint-plugin-react-refresh": "^0.4.24",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"prettier": "^3.6.2",
		"turbo": "^2.5.8",
		"typescript": "5.9.3"
	}
}
