{
	"name": "@zayne-labs/toolkit",
	"version": "0.1.0",
	"type": "module",
	"description": "A collection of utility functions, types and composables used by my other projects. Nothing too fancy but can be useful.",
	"repository": {
		"type": "git",
		"url": "https://github.com/zayne-labs/toolkit.git"
	},
	"main": "./dist/esm-min/core/index.js",
	"module": "./dist/esm-min/core/index.js",
	"types": "./dist/esm-min/core/index.d.ts",
	"homepage": "https://github.com/zayne-labs/toolkit#readme",
	"bugs": {
		"url": "https://github.com/zayne-labs/toolkit/issues"
	},
	"license": "MIT",
	"author": "Ryan Zayne",
	"scripts": {
		"prepare": "husky",
		"test:check-types": "tsc --pretty --incremental -p tsconfig.json",
		"test:format": "prettier --cache --write .",
		"test:lint": "eslint src/**/*.ts --cache --max-warnings 0 --report-unused-disable-directives",
		"test:size": "size-limit",
		"test:publint": "publint --strict .",
		"test:attw": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
		"test:release": "pkg-pr-new publish",
		"build": "tsup",
		"build:dev": "cross-env NODE_ENV=development tsup",
		"build:test": "concurrently --prefix-colors \"yellow.bold,#7da4f8.bold,magenta\" --names PUBLINT,TSUP 'pnpm:test:publint' 'pnpm:build:dev'",
		"version-package": "changeset version",
		"release": "changeset publish",
		"inspect:eslint-config": "pnpx @eslint/config-inspector@latest"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.16.0",
		"@changesets/cli": "^2.27.8",
		"@eslint-react/eslint-plugin": "^1.13.0",
		"@eslint/compat": "^1.1.1",
		"@eslint/js": "^9.10.0",
		"@size-limit/esbuild-why": "^11.1.4",
		"@size-limit/preset-small-lib": "^11.1.4",
		"@stylistic/eslint-plugin": "^2.7.2",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/node": "^22.5.4",
		"@zayne-labs/tsconfig": "^0.1.1",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.10.0",
		"eslint-import-resolver-typescript": "^3.6.3",
		"eslint-plugin-import-x": "^4.2.1",
		"eslint-plugin-jsdoc": "^50.2.2",
		"eslint-plugin-perfectionist": "^3.4.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-unicorn": "^55.0.0",
		"eslint-typegen": "^0.3.1",
		"globals": "^15.9.0",
		"husky": "^9.1.5",
		"lint-staged": "^15.2.10",
		"pkg-pr-new": "^0.0.24",
		"prettier": "^3.3.3",
		"publint": "^0.2.10",
		"size-limit": "^11.1.4",
		"terser": "^5.31.6",
		"tsup": "^8.2.4",
		"typescript": "5.5.4",
		"typescript-eslint": "^8.4.0"
	},
	"peerDependencies": {
		"@types/react": ">=18.0.0",
		"react": ">=18.0.0",
		"sonner": ">=1.5.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		},
		"sonner": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/",
		"provenance": true
	},
	"exports": {
		".": "./dist/esm-min/core/index.js",
		"./react": "./dist/esm-min/react/index.js",
		"./type-helpers": "./dist/esm-min/type-helpers/index.js"
	},
	"files": [
		"dist"
	],
	"size-limit": [
		{
			"path": "./src/core/index.ts",
			"limit": "3 kb"
		},
		{
			"path": "./src/react/index.ts",
			"limit": "5 kb"
		},
		{
			"path": "./src/type-helpers/index.ts",
			"limit": "500 b"
		}
	],
	"sideEffects": false,
	"keywords": [
		"utilities",
		"types",
		"hooks"
	],
	"packageManager": "pnpm@9.9.0",
	"engines": {
		"node": ">=18.x"
	}
}
